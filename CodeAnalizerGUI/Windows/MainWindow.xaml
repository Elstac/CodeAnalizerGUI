<Window x:Class="CodeAnalizerGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodeAnalizerGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ToolBar Grid.Row="0" Grid.ColumnSpan="3">
            <Button Content="OpenProject" Click="Open_Button_Click"/>
            <Button Content="Exit" Click="Exit_Button_Click"/>
            <Button Content="Options" Click="OptionsButtonClick"/>
            <Button Content="TEST" Click="TESTButtonClick"/>
        </ToolBar>

        <ToolBarTray Orientation="Vertical" Grid.Column="0" Grid.Row="1">
            <ToolBar Name="NavigationBar"/>
        </ToolBarTray>
        <ContentControl Name="MainControl" Grid.Column="1" Grid.Row="1">
            
        </ContentControl>

    </Grid>
</Window>
