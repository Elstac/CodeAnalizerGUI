<UserControl x:Class="CodeAnalizerGUI.UserControls.MainWindowControls.GitBinderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CodeAnalizerGUI.UserControls.MainWindowControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <DataTemplate x:Key="MainTemplate">
            <WrapPanel HorizontalAlignment="Stretch">
                <TextBlock Text="{Binding name}" Margin="10,10"/>
                <TextBlock Text="{Binding email}" Margin="10,10"/>
            </WrapPanel>
        </DataTemplate>
    </UserControl.Resources>
    <StackPanel>
        <ListView Name="MainList" ItemTemplate="{StaticResource MainTemplate}"/>
        <Button Content="Select" Click="SelectButtonClick"/>
    </StackPanel>
</UserControl>
