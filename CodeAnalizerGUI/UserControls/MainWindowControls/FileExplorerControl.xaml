<UserControl x:Class="CodeAnalizerGUI.UserControls.MainWindowControls.FileExplorerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CodeAnalizerGUI.UserControls.MainWindowControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TreeView Name="fileTree"/>
        <TextBlock Name="TestBlock" Text="No file has been chosen"/>

        <Button Content="SelectFolder" Click="SelectButtonClick"/>
        <Button Content="Exit" Click="Button_Click"/>

    </StackPanel>
</UserControl>
